<!-- list-post.hbs -->
<header class="category-title" tabindex="0">
    <h2 title="{{heading}}" role="heading" aria-level="2">{{heading}}</h2>
</header>
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="9" as |post|}}
<article class="category-content flex row nowrap start start-items gap-x6">
    {{#foreach post}}
    <article class="category-item" aria-label="{{title}}" title="{{title}}">
        <figure class="item-figure"><a href="{{url absolute='true'}}" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"><img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></a></figure>
        <header class="item-title"><h3 role="heading" aria-level="3"><a href="{{url absolute='true'}}" title="{{title}}" target="_self">{{title}}</a></h3></header>
        <div class="item-cta">{{!--> "item-button" item_price=tags.[1].slug--}}X</div>
        {{#if custom_excerpt}}<p class="item-text">&OpenCurlyDoubleQuote;{{custom_excerpt}}&CloseCurlyDoubleQuote;</p>{{/if}}
        {{#if featured}}<div>{{!--> "icons/fire"--}}&nbsp;{{t "Featured"}}</div>{{/if}}
    </article>
    {{/foreach}}
</article>
{{else}}<p class="empty-categories">{{#if error}}{{error}}{{/if}}{{t "Sorry, there are no products in this category."}}</p>
{{/get}}