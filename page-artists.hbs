{{!< default}}
<!-- page-artists.hbs -->
{{#post}}
<header class="paintings-{{post_class}}" tabindex="0">
    <h2 role="heading" aria-level="2">{{title}}</h2>
</header>
<section class="categories-{{post_class}} flex">
    {{> "list-artists" heading="Gallery artists" section="artist"}}
</section>
<section class="categories-{{post_class}} flex">
    {{> "list-artists" heading="Artists exhibited" section="artist" names-only=true}}
</section>
<footer class="footer-{{post_class}} flex">
    <form method="post">
        <fieldset class="flex row gap-x2">
            <legend><h4 role="heading" aria-level="4">Subscribe to our newsletter&colon;</h4></legend>
            <input type="text" name="name" autocomplete="name" required />
            <input type="email" name="email" autocomplete="email" required />
            <div>
                <input type="submit" value="Subscribe" />
                <input type="reset" value="Reset" />
            </div>
        </fieldset>
    </form>
    <button id="goTopBtn">Scroll Up</button>
</footer>
{{#contentFor "head_scripts"}}{{/contentFor}}
{{#contentFor "foot_scripts"}}{{/contentFor}}
{{/post}}