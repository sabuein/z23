<!-- list-artists.hbs -->
<header class="category-title" tabindex="0">
    <h3 title="{{heading}}" role="heading" aria-level="3">{{heading}}</h3>
</header>
{{#if names-only}}
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="all" as |post|}}
<article class="list-artists-names flex row wrap gap-x1">
    {{#foreach post}}
    <article class="category-item" aria-label="{{title}}" title="{{title}}" tabindex="0">
        <header class="item-title">
            <h4 role="heading" aria-level="4"><a href="{{url}}" title="{{title}}" target="_self">{{title}}</a></h4>
        </header>
        <div class="item-cta">{{!--> "item-button" item_price=tags.[1].slug--}}X</div>
        {{#if custom_excerpt}}
        <p class="item-text">&OpenCurlyDoubleQuote;{{custom_excerpt}}&CloseCurlyDoubleQuote;</p>
        {{/if}}
        {{#if featured}}
        <div>{{!--> "icons/fire"--}}X&nbsp;Featured{{t "Featured"}}</div>
        {{/if}}
    </article>
    {{/foreach}}
</article>
{{/get}}
{{else}}
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="all" as |post|}}
<article class="category-content flex row wrap gap-x1">
    {{#foreach post}}
    <article class="category-item" aria-label="{{title}}" title="{{title}}" tabindex="0">
        <figure class="item-figure" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            <img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        </figure>
        <header class="item-title">
            <h4 role="heading" aria-level="4"><a href="{{url}}" title="{{title}}" target="_self">{{title}}</a></h4>
        </header>
        <div class="item-cta">{{!--> "item-button" item_price=tags.[1].slug--}}X</div>
        {{#if custom_excerpt}}
        <p class="item-text">&OpenCurlyDoubleQuote;{{custom_excerpt}}&CloseCurlyDoubleQuote;</p>
        {{/if}}
        {{#if featured}}
        <div>{{!--> "icons/fire"--}}X&nbsp;Featured{{t "Featured"}}</div>
        {{/if}}
    </article>
    {{/foreach}}
</article>
{{/get}}
{{/if}}
