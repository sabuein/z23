{{!< default}}
<!-- page-artists.hbs -->
{{#post}}
<header class="paintings-{{post_class}}" tabindex="0">
    <h2 role="heading" aria-level="2">{{title}}</h2>
</header>
<section class="categories-{{post_class}} flex">
    {{> "list-artists" heading="Gallery artists" section="artist"}}
</section>
<section class="categories-{{post_class}} flex">
    {{> "list-artists" heading="Artists exhibited" section="artist" secondary=true}}
</section>
<footer class="footer-{{post_class}} flex">
    <aside class="flex">{{> "sharing"}}</aside>
    <div>{{> "subscribe"}}</div>
    <button id="goTopBtn">Scroll Up</button>
</footer>
{{#contentFor "head_scripts"}}{{/contentFor}}
{{#contentFor "foot_scripts"}}{{/contentFor}}
{{/post}}