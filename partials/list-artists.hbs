<!-- list-artists.hbs -->
<header class="category-title flex row gap-x1" tabindex="0">
    <h3 title="{{heading}}" role="heading" aria-level="3">{{heading}}</h3>
</header>
{{#if secondary}}
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="all" as |post|}}
<article class="list-artists-secondary flex">
    <div class="content-container flex row wrap start-items gap-x2">
        {{#foreach post}}
        <article class="category-item flex" aria-label="{{title}}" title="{{title}}" tabindex="0">
            <figure class="item-figure" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                <a href="{{url}}" title="{{title}}" target="_self"><img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></a>
            </figure>
            <header class="item-title">
                <h4 role="heading" aria-level="4"><a href="{{url}}" title="{{title}}" target="_self">{{title}}</a></h4>
            </header>
        </article>
        {{/foreach}}
    </div>
</article>
{{/get}}
{{else}}
{{#get "posts" include="tags,authors" filter="primary_tag:{{section}}" limit="all" as |post|}}
<article class="category-content flex">
    <div class="content-container flex row wrap start start-items gap-x2-5">
        {{#foreach post}}
        <article class="category-item flex" aria-label="{{title}}" title="{{title}}" tabindex="0">
            <figure class="item-figure" title="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                <a href="{{url}}" title="{{title}}" target="_self"><img src="{{img_url feature_image}}" class="item-img" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" /></a>
            </figure>
            <header class="item-title">
                <h4 role="heading" aria-level="4"><a href="{{url}}" title="{{title}}" target="_self">{{title}}</a></h4>
            </header>
        </article>
        {{/foreach}}
    </div>
</article>
{{/get}}
{{/if}}
