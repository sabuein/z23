<!DOCTYPE html>
<html {{#match @site.locale "=" "ar"}}lang="{{@site.locale}}" dir="rtl"{{else}}lang="{{@site.locale}}"{{/match}}>
<!-- default.hbs -->
<head>
    <title>{{#if pages}}{{meta_title page=(t "Page %")}}{{else}}{{meta_title}}{{/if}}</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" />
    <script type="importmap">
        {
            "imports": {
                "nav": "{{asset "js/modules/navigation.mjs"}}",
                "help": "{{asset "js/modules/helpers.mjs"}}"

            }
        }
    </script>
    <script type="module" src="{{asset "js/index.mjs"}}"></script>
    {{ghost_head}}
</head>
<body class="flex">
    <div class="skipnav"><a href="#maincontent">Skip to main content&hellip;</a>&nbsp;<a href="#sitemap">Skip to footer site map</a></div>
    <header class="site-header flex row space-between gap-x2" role="banner">
        {{#if @site.logo}}
        <figure>
            {{#link href=@site.url title="{{@site.title}} &dash; {{@site.description}}" tabindex="-1"}}<img src="{{@site.logo}}" alt="{{@site.title}}" />{{/link}}
        </figure>
        {{else}}
        <h1 role="heading" aria-level="1"><a href="{{@site.url}}" title="{{@site.title}}">{{@site.title}}</a></h1>
        <h2>{{@site.description}}</h2>
        {{/if}}
        <nav class="flex row">{{navigation}}</nav>
        <div class="flex row gap-x1">
            <button type="button" id="menuToggle">&#x2630;</button>
            <button type="button" data-ghost-search>&#x1f50e;</button>
        </div>
    </header>
    <noscript>
        <p class="flex" style="padding: 2rem; width: 100%;">This web application requires JavaScript</p>
    </noscript>
    <main class="flex" role="main" id="maincontent">{{{body}}}</main>
    {{> "footer"}}
    {{#is "post"}}{{/is}}
    <script type="text/javascript" language="JavaScript">
        //<!-- <![CDATA[
        const progressBar = document.querySelector(".reading-bar");
        if (progressBar) requestAnimationFrame(updateProgress);
        function updateProgress () {
            try {
                const totalHeight = document.body.clientHeight;
                const windowHeight = document.documentElement.clientHeight;
                const position = window.scrollY;
                const progress = position / (totalHeight - windowHeight) * 100;
                progressBar.setAttribute("value", progress);
                requestAnimationFrame(updateProgress);
            } catch (error) {
                console.log(error);
            }
        }
        
        //]]> -->
    </script>
    
    {{ghost_foot}}
</body>
</html>